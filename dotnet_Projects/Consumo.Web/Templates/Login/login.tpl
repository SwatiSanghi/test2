<form class="form-signin">
  <h2 class="form-group font"> Sign In</h2>
  <div class="form-group font">Sign in using your registered account</div>
  <div class="form-group input-group input-group-sm">
    <span class="input-group-addon">
      <img src="../Styles/Default/Images/Login/User_icon.png" />
    </span>
    <input type="text" class="form-control" placeholder="Username" />

  </div>
  <div class="form-group input-group input-group-sm">
    <span class="input-group-addon">
      <img src="../Styles/Default/Images/Login/PW_icon.png" />
    </span>
    <input type="password" class="form-control" placeholder="Password" />
  </div>
  <div class="form-inline">
    <div class="form-group">
      <label class="checkbox font" >
        <input type="checkbox" value="Keep me signed in" /> Keep me signed in
      </label>
      <button id="btnLogin" class="btn btn-sub">Sign in</button>
    </div>
  </div>
  <div class="form-group">
    <hr class="dotted-line" />
  </div>
  <div class="form-inline">
    <div class="form-group">
      <button class="btn btn-req-access" type="submit">Request Access</button>
      <button class="btn btn-res-pass" type="submit">Reset Password</button>
    </div>
   </div>
</form>


